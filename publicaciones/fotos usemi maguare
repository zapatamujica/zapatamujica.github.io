@article{Zapata Mujica_2025, title={Fotos para visibilizar una misión laica femenina. usemi, las misioneras de la liberación en la Sierra Nevada de Santa Marta}, volume={39}, url={https://revistas.unal.edu.co/index.php/maguare/article/view/118071}, DOI={10.15446/mag.v39n1.118071}, abstractNote={&amp;lt;p&amp;gt;En este trabajo descriptivo visibilizo la acción misionera de la Unión de Seglares Misioneros (Usemi) en la Sierra Nevada de Santa Marta, entre 1965 y 1983, experiencia poco conocida frente a la historia de la misión capuchina que también hizo trabajo evangelizador en aquel macizo montañoso. A partir de un archivo fotográfico de 1208 fotografías, presento una mirada sobre el paso de esta misión por las sociedades ikʉ y kogi, incluyendo 21 fotografías que buscan crear una imagen general de Usemi en la Sierra. Así, busco contribuir al conocimiento sobre las misiones evangelizadoras en América Latina desde la perspectiva de un grupo de mujeres laicas, inspiradas por la teología de la liberación de monseñor Gerardo Valencia Cano, conocido como el Obispo Rojo de Colombia.&amp;lt;/p&amp;gt;}, number={1}, journal={Maguaré}, author={Zapata Mujica, Juan Sebastián}, year={2025}, month={ene.}, pages={239–275} }